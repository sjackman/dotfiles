[alias]
	ff = pull --ff-only
	wdiff = diff --word-diff=plain
	wdiffc = diff --word-diff=color
	wdiffcsv = diff --word-diff=color --word-diff-regex=[^,]+
	l = log -n10 --pretty=format:"%C(yellow)%h\\ %Creset%s\\ %Cblue[%cn]" --decorate
	lb = log -n10 --pretty=format:"%C(yellow)%h\\ %Cred%d\\ %Creset%s\\ %Cblue[%cn]" --decorate
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[credential]
	# For Mac OS
	helper = osxkeychain
	# For Linux
	#helper = cache --timeout=100000000
[diff "pandoc"]
	textconv = pandoc --to=markdown --no-wrap
[hub]
	protocol = https
[user]
	name = Shaun Jackman
	email = sjackman@gmail.com
[push]
	default = simple
[color]
	ui = true
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
